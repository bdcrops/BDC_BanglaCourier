<?xml version="1.0" ?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<carriers>
			<banglacourier>
				<active>1</active>
				<title><![CDATA[Bangla Carrier Shipping]]></title>
				<sallowspecific>0</sallowspecific>
				<showmethod>0</showmethod>
				<specificerrmsg><![CDATA[The Bangla Carrier shipping method is not available. To use this shipping method, please contact us.]]></specificerrmsg>
				<sort_order>10</sort_order>
				<model>BDC\BanglaCourier\Model\Carrier\BanglaCourier</model>

				<!-- The "Untracked Bangla Mail" specific options -->
				<banglacourierstandard>
					<title_one><![CDATA[BanglaCourier Standard]]></title_one>
					<shippingcost_one>4.99</shippingcost_one>
				</banglacourierstandard>

				<!-- The "Parcel Force 48hr" specific options -->
				<banglacourier48hr>
					<title_two><![CDATA[BanglaCourier 48h]]></title_two>
					<shipping_cost_two>9.99</shipping_cost_two>
				</banglacourier48hr>

			</banglacourier>
		</carriers>
	</default>
</config>
